<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @physician.name %>
</p>

<p>
  <strong>Specialty:</strong>
  <%= @physician.specialty %>
</p>

<h3>Office Location</h3>
<table id="office_table">
    <thead>
      <tr>
        <th id="office_head">Street Address</th>
        <th id="office_head">Zip Code</th>
        <th id="office_head">Phone Number</th>
      </tr>
     </thead>

     <tbody id="office_middle">
     <% @physician.offices.each do |office| %>
        <tr> 
          <td id="office_out"><%= office.street_address %></td> 
          <td id="office_out"><%= office.zip_code %></td> 
          <td id="office_out"><%= office.phone %></td> 
        </tr>
       <% end %> 
    </tbody>
  </table>

<br>

<h3>Current Appointments</h3>

  <table id="office_table">
    <thead>
      <tr>
        <th id="office_head">Patient Name</th>
        <th id="office_head">Date of Appointment</th>
      </tr>
     </thead>

     <tbody id="office_middle">
     <% @physician.appointments.each do |appointment| %>
        <tr>
          <td id="office_out"><%= appointment.patient.name %></td> 
          <td id="office_out"><%= appointment.visit.to_formatted_s(:long_ordinal)  %></td> 
        </tr>
       <% end %> 
    </tbody>
  </table>

<%= link_to 'Edit', edit_physician_path(@physician) %> |
